<?xml version="1.0" encoding="UTF-8"?>
<project xmlns="http://maven.apache.org/POM/4.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/xsd/maven-4.0.0.xsd">
	<modelVersion>4.0.0</modelVersion>
	<groupId>org.eclipse.papyrus.designer</groupId>
	<artifactId>org.eclipse.papyrus.designer.parent</artifactId>
	<version>0.7.0-SNAPSHOT</version>
	<packaging>pom</packaging>
	<name>Designer</name>
	<description>A Papyrus component for code generation and deployment</description>
	<url>https://eclipse.org/papyrus/components/designer</url>
	<inceptionYear>2016</inceptionYear>

	<modules>
		<module>components</module>
		<module>languages</module>
		<module>gui</module>
		<module>releng</module>
		<module>targetplatform</module>
	</modules>
	<properties>
		<!-- plugins versions -->
		<!-- use 'mvn versions:display-plugin-updates' to check for the latest -->
		<tycho-version>0.24.0</tycho-version>
		<tychoExtrasVersion>0.24.0</tychoExtrasVersion>
		<maven-checkstyle-version>2.12.1</maven-checkstyle-version>
		<maven-findbugs-version>3.0.0</maven-findbugs-version>
		<maven-pmd-version>3.1</maven-pmd-version>
		<maven-jxr-version>2.3</maven-jxr-version>
		<project.build.sourceEncoding>UTF-8</project.build.sourceEncoding>

		<!-- Sonar properties -->
		<!-- sonar.language>java</sonar.language>
		<sonar.java.coveragePlugin>jacoco</sonar.java.coveragePlugin>
		<sonar.jacoco.reportPath>${session.executionRootDirectory}/target/jacoco.exec</sonar.jacoco.reportPath>
		<jacoco-version>0.7.4.201502262128</jacoco-version>
		<siteMainDirectory>${user.home}/staging</siteMainDirectory-->

		<!-- Eclipse properties -->
		<xtext.version>2.7.3</xtext.version>
		<!-- default environment overridden by profile, tycho preempts profile -->
		<java.source>1.7</java.source>
		<java.target>1.7</java.target>
		<eclipse.release>neon-papyrusnightly</eclipse.release>
		<eclipse.targetrelease>neon-papyrusnightly</eclipse.targetrelease>
		<target.version>${project.version}</target.version>

		<!-- Platform properties -->
		<env.ui.test>-Xms512m -Xmx2048m -XX:MaxPermSize=512M</env.ui.test>
	</properties>

